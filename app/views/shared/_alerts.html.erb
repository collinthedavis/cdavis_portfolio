<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "Cdavis portfolio", sticky: false, time: 1000) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "Cdavis portfolio", sticky: false, time: 1000) %>
<% else %>
	<%= js add_gritter(flash[:notice], title: "Cdavis portfolio", sticky: false, time: 1000) %>
<% end %>